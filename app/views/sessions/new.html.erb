<h1>Sign In</h1>

<%= form_tag ({controller: 'sessions', action: 'create', method: 'post'}) do %>

  <%= label_tag :name %><br>
  <%= collection_select :user, :name, User.all, :name, :name %>
  <br>
  <%= label_tag :password %><br>
  <%= password_field_tag :password %>
  <br>
  <%= submit_tag "Sign In" %>

<% end %>