<h1> Sign in: </h1>


<%= form_tag ({controller: 'sessions', action: 'create', method: 'post'}) do %>
  <%= label_tag 'name'%>
  <% if @users %>
    <%= collection_select :user, :name, @users, :id, :name %>
  <%end%>
  <%= label_tag 'password'%>
  <%= password_field_tag(:password)%>
  <%= submit_tag 'Sign In'%>
<% end %>

